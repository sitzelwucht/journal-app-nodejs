<div class="form-box">

  <h1>Login</h1>
  <%- include('./partials/messages') %>
  <form action="/users/login" method="POST">
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="name" id="username" name="username" class="form-control login" placeholder="Enter Username"/>
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" class="form-control login" placeholder="Enter Password"/>
    </div>
    <button type="submit" class="form-control">Login</button>
  </form>
  <div>No account? <a href="/users/register">Register ››</a></div>
</div>
           
